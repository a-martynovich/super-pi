			android:background="#000000" android:layout_weight="1"
			android:layout_height="0dp" android:padding="2dip">
			<Button android:id="@+id/btnCalculate" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Calculate"
				android:layout_marginTop="1dip" android:onClick="btnCalculateClicked" />
